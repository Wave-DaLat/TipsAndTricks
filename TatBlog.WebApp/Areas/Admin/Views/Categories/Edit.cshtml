@model CategoryEditModel

@{
  ViewData["Title"] = "Thêm/ Cập nhập chủ đề";
}

<h1>Thêm/ Cập nhập chủ đề</h1>

<form method="post"
      enctype="multipart/form-data"
      asp-area="Admin"
      asp-controller="Categories"
      asp-action="Edit">
  <div asp-validation-summary="ModelOnly"></div>
  <input type="hidden" asp-for="Id">
  <div class="row mb-3">
    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="Name">
      <span class="text-danger"
            asp-validation-for="Name"></span>
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="UrlSlug" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="UrlSlug">
      <span class="text-danger"
            asp-validation-for="UrlSlug"></span>
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="Description">
      <span class="text-danger"
            asp-validation-for="Description"></span>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-10 offset-sm-2">
      <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="ShowOnMenu">
        <label class="form-check-label" asp-for="ShowOnMenu"></label>
      </div>
    </div>
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Lưu các thay đổi
    </button>
    <a class="btn btn-danger"
       asp-area="Admin"
       asp-controller="Categories"
       asp-action="Index">
       Hủy & Quay lại
    </a>
  </div>
</form>

@section scripts
{
  <partial name="_ValidationScriptsPartial" />

  <script src="~/lib/speakingurl/speakingurl.min.js"></script>

  <script>
    $(function (){
      $('#Name').change(function () {
        var slug = getSlug(this.value);
        console.log(slug);
        $('#UrlSlug').val(slug).trigger('blur');
      });
    });
  </script>
}